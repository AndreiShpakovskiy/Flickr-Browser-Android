<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="wrap_content" android:orientation="horizontal" android:padding="8dp"
              android:weightSum="3">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/default_placeholder_image"
            android:id="@+id/photo_view"
            android:layout_weight="1" android:contentDescription="@string/browse_image_description"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/pictire_title"
            android:layout_weight="2"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>
</LinearLayout>